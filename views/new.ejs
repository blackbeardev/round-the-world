<% include partials/header %>

<div class="container">
    <div class="row">

        <h1 style="text-align: center;">Add a new destination.</h1>
        <div style="width: 30%; margin: 40px auto;">
            <form action="/destinations" method="post">
                <div class="form-group">
                    <input class="form-control" type="text" placeholder="Name" name="name">    
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" placeholder="Image URL" name="image">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" placeholder="Description" name="description">
                </div>
                <div class="form-group">
                    <button class="btn btn-primary btn-large btn-default btn-block">Submit</button>
                </div>
            </form>
            <a href="/destinations">Back to destinations</a>
        </div>
    </div>
</div>



