<% include partials/header %>

<div class="container">
    <div class="row">

        <h1 style="text-align: center;">Edit <%= destination.name %></h1>
        <div style="width: 30%; margin: 40px auto;">
            <form action="/destinations/<%= destination._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" value="<%= destination.name %>" name="destination[name]">    
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" value="<%= destination.image %>" name="destination[image]">
                </div>
                <div class="form-group">
                    <textarea class="form-control" type="text" name="destination[description]"><%= destination.description %></textarea>
                </div>
                <div class="form-group">
                    <button class="btn btn-primary btn-large btn-default btn-block">Submit</button>
                </div>
            </form>
            <a href="/destinations">Back to destinations</a>
        </div>
    </div>
</div>

<% include partials/footer %>